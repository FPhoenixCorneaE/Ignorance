<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="@dimen/margin_10dp">

    <am.widget.shapeimageview.ShapeImageView
        android:id="@+id/iv_friend_avatar"
        style="@style/_ShapeImageView_Circle_radius50dp"
        android:layout_width="@dimen/width_60dp"
        android:layout_height="@dimen/height_60dp"
        android:src="@drawable/shape_circle_solidlightgray"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/_16sp_LightPurpleText"
            android:text="陈雨溪"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_journal_description"
            style="@style/_16sp_BlackText"
            android:layout_marginTop="@dimen/margin_5dp"
            android:gravity="fill_horizontal"
            android:text="今天天气真好，好开心！你若安好便是晴天！"
            tools:ignore="HardcodedText" />

        <com.livelearn.ignorance.widget.ninegridlayout.NineGridLayout
            android:id="@+id/ngl_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:paddingEnd="@dimen/margin_30dp"
            android:paddingStart="0dp" />

        <TextView
            android:id="@+id/tv_release_location"
            style="@style/_15sp_BlackText"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="fill_horizontal"
            android:text="广州天河珠江新城"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_release_time"
            style="@style/_13sp_GrayText"
            android:layout_marginTop="@dimen/margin_3dp"
            android:text="3分钟前"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>