<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/width_24dp"
            android:layout_height="@dimen/height_24dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_delete_gray"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_16dp" />

    <TextView
        android:id="@+id/tv_intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_dark_purple"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_20dp" />

    <TextView
        android:id="@+id/tv_full_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_dark_black"
        android:textSize="15sp" />
</LinearLayout>
