<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground">

    <Space
        android:id="@+id/center_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <com.livelearn.ignorance.widget.TintableImageView
        android:id="@+id/iv_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_above="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_home_video"
        app:tiv_tint="@color/selector_selectedpurple_normalgray" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_anchor"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:textColor="@color/selector_selectedpurple_normalgray"
        android:textSize="@dimen/text_size_18sp" />

</RelativeLayout>
