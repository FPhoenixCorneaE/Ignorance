<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.livelearn.ignorance.widget.smarttablayout.SmartTabLayout
        android:id="@+id/stl_video"
        style="@style/_SmartTabLayout_PureTextTab_Linear"
        android:background="?attr/colorPrimary"
        app:stl_customTabTextLayoutId="@layout/item_tab_color_track"
        app:stl_titleOffset="auto_center" />

    <com.livelearn.ignorance.widget.viewpager.SpringBackViewPager
        android:id="@+id/vp_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>