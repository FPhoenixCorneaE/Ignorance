<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.livelearn.ignorance.widget.TitleBar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.LVCircularCD
                            android:id="@+id/lv_circular_CD"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVCircularRing
                            android:id="@+id/lv_circular_ring"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.LVCircular
                            android:id="@+id/lv_circular"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVFinePoiStar
                            android:id="@+id/lv_fine_pointed_star"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVCircularSmile
                            android:id="@+id/lv_circular_smile"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVGears
                            android:id="@+id/lv_gears"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVGearsTwo
                            android:id="@+id/lv_gears_two"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVWifi
                            android:id="@+id/lv_wifi"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVCircularJump
                            android:id="@+id/lv_circular_jump"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVCircularZoom
                            android:id="@+id/lv_circular_zoom"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVPlayBall
                            android:id="@+id/lv_play_ball"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVNews
                            android:id="@+id/lv_news"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </LinearLayout>

                <com.ldoublem.loadingviewlib.LVLineWithText
                    android:id="@+id/lv_line_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <com.ldoublem.loadingviewlib.view.LVEatBeans
                    android:id="@+id/lv_eat_beans"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.LVChromeLogo
                            android:id="@+id/lv_chromeLogo"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVRingProgress
                            android:id="@+id/lv_ring_progress"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVBlock
                            android:id="@+id/lv_block"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <com.ldoublem.loadingviewlib.view.LVFunnyBar
                            android:id="@+id/lv_funny_bar"
                            android:layout_width="75dp"
                            android:layout_height="75dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_120dp"
                    android:orientation="horizontal"
                    tools:ignore="DisableBaselineAlignment">

                    <com.ldoublem.loadingviewlib.view.LVGhost
                        android:id="@+id/lv_ghost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />

                    <com.ldoublem.loadingviewlib.view.LVBlazeWood
                        android:id="@+id/lv_blaze_wood"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.ldoublem.loadingviewlib.view.LVBattery
                        android:id="@+id/lv_battery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_start_all"
            android:layout_width="@dimen/width_100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@drawable/shape_solidlightgray"
            android:text="start all"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_stop_all"
            android:layout_width="@dimen/height_100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/shape_solidlightgray"
            android:text="stop all"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>