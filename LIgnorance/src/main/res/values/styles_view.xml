        <item name="android:layout_height">@dimen/height_100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="sivBorderColor">@color/color_pale</item>
        <item name="sivBorderWidth">@dimen/width_2dp</item>
        <item name="sivHeightScale">1</item>
        <item name="sivScaleTarget">height</item>
        <item name="sivShape">Circle</item>
        <item name="sivWidthScale">1</item>
    </style>

    <!--RippleView  波纹相对布局(矩形)-->
    <style name="_RippleView_rectangle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rv_color">@color/color_dark_purple</item>
        <item name="rv_type">rectangle</item>
        <item name="rv_rippleDuration">400</item>
        <item name="rv_zoom">true</item>
        <item name="rv_zoomScale">1.2</item>
        <item name="rv_ripplePadding">@dimen/margin_10dp</item>
    </style>

    <!--RippleView  波纹相对布局(双重波纹，多用于小图标)-->
    <style name="_RippleView_doubleRipple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rv_color">@color/color_dark_purple</item>
        <item name="rv_type">doubleRipple</item>
        <item name="rv_zoom">true</item>
        <item name="rv_zoomScale">1.2</item>
        <item name="rv_centered">true</item>
    </style>

    <!--CompoundButton 混合按钮-->
    <style name="_CompoundButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:checked">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--RatingBar样式-->
    <style name="_RatingBar">
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:progressDrawable">@drawable/layerlist_ratingbar</item>
    </style>

    <!--标签布局-->
    <style name="_TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_40dp</item>
        <item name="android:background">@color/background</item>
        <item name="tabMode">scrollable</item>
        <!--TabGravity属性只有在TabMode为fixed情况下才有用-->
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/color_light_purple</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/_TabTextAppearance</item>
        <item name="tabTextColor">@color/color_dark_black</item>
        <item name="tabSelectedTextColor">@color/color_light_purple</item>
    </style>

    <style name="_TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>