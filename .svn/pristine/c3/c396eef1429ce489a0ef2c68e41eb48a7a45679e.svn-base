package com.livelearn.ignorance.fragment;


import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ImageView;
import android.widget.TextView;

import com.livelearn.ignorance.R;
import com.livelearn.ignorance.config.Constant;
import com.livelearn.ignorance.utils.GlideUtils;

import butterknife.BindView;
import butterknife.ButterKnife;

public class PlaceholderFragment extends Fragment {

    @BindView(R.id.iv_guide)
    ImageView ivGuide;

    @BindView(R.id.tv_text)
    TextView tvText;

    @BindView(R.id.tv_subtext)
    TextView tvSubtext;

    boolean visible = true;

    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState) {
        View rootView = inflater.inflate(R.layout.fragment_guide, container, false);
        ButterKnife.bind(this, rootView);
        Bundle bundle = getArguments();
        int res = bundle.getInt(Constant.ARG_SECTION_NUMBER, R.mipmap.guide_1);
        GlideUtils.setupImage(getActivity(), ivGuide, res);
        ivGuide.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if (!visible) {
                    visible = true;
                    tvText.setVisibility(View.VISIBLE);
                    tvSubtext.setVisibility(View.VISIBLE);
                } else {
                    visible = false;
                    tvText.setVisibility(View.INVISIBLE);
                    tvSubtext.setVisibility(View.INVISIBLE);
                }
            }
        });
        return rootView;
    }
}
