<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_QQlogin"
            style="@style/TextView_thirdparty"
            android:text="@string/login_QQlogin" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/login_thirdparty" />

        <TextView
            android:id="@+id/tv_WeChatlogin"
            style="@style/TextView_thirdparty"
            android:text="@string/login_WeChatlogin" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/login_thirdparty" />

        <TextView
            android:id="@+id/tv_Weibologin"
            style="@style/TextView_thirdparty"
            android:text="@string/login_Weibologin" />
    </LinearLayout>

    <com.livelearn.ignorance.widget.materiallogin.MaterialLoginView
        android:id="@+id/mlv_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginView="@layout/view_login_custom"
        app:registerIcon="@mipmap/ic_person_add_white_24dp"
        app:registerView="@layout/view_register_custom" />
</RelativeLayout>
